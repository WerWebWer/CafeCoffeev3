<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#684401</item>
        <item name="colorPrimaryDark">#684401</item>
        <item name="colorAccent">#4898FF</item>
        <item name="android:colorBackground">@color/primary_material_light</item>
        <item name="android:textColorPrimary">@color/foreground_material_light</item>
        <item name="android:textColorSecondary">@color/foreground_material_light</item>
        <item name="android:colorForeground">#DFBA75</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>

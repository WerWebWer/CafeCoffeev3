<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutSplashScreen"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stusdstock.cafecoffee.PresentationScreen">


    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/logoCafeImageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:src="@drawable/ic_launcher" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/logoSubTextCafeImageView"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/cafesanckbar"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_weight="1"/>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="@string/textoBemVindo"
        android:gravity="center"
        android:textSize="32sp"/> -->
</LinearLayout>
